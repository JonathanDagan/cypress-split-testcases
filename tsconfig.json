{
    "compilerOptions": {
        "target": "es5",
        "module": "commonjs",
        "lib": ["ES2020"],
        "outDir": "lib",
        "rootDir": "src",
        // "types": ["node", "inquirer", "fs-extra", "lodash"],
        "sourceMap": false,
        "moduleResolution": "node",
        "removeComments": true,
        "allowSyntheticDefaultImports": true,
        "importHelpers": true
    },
    "ts-node": {
        "compilerOptions": {
            "module": "commonjs"
        }
    },
    "include": ["src/**/*.ts"]
    // "exclude": ["node_modules", "lib"]
}
